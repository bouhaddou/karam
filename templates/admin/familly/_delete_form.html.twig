<form method="post" action="{{ path('familly_delete', {'id': familly.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ familly.id) }}">
    <button class="btn btn-danger mt-3 mb-2"><i class="fas fa-trash"></i> Supprimer</button>
</form>
