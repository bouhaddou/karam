{% extends 'admin/base.html.twig' %}

{% block title %}Famille{% endblock %}

{% block body %}
 <div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Gestion Famille</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item "><a href="{{ path('admin_dashboard') }}">Table de bord</a></li>
              <li class="breadcrumb-item" ><a href="{{ path('familly_index') }}">Famille</a></li>
              <li class="breadcrumb-item active">Information de la  Famille</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    <div class="container">
    <h1 class="text-center mt-3 mb-3">Information de la Famille</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ familly.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ familly.nom }}</td>
            </tr>
            <tr>
                <th>SetAt</th>
                <td>{{ familly.setAt ? familly.setAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ familly.adresse }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ familly.phone }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-success" href="{{ path('familly_edit', {'id': familly.id}) }}"><i class="fas fa-edit "></i> Modifier</a><br>
    <a class="btn btn-primary mt-3" href="{{ path('familly_index') }}"><i class="fas fa-undo"></i> Retour</a>
    {{ include('admin/familly/_delete_form.html.twig') }}
 </div>
</div>
{% endblock %}
