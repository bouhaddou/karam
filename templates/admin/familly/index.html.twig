{% extends 'admin/base.html.twig' %}

{% block title %}Familles{% endblock %}

{% block body %}
 
   <div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Gestion Famille</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item "><a href="{{ path('admin_dashboard') }}">Table de bord</a></li>
              <li class="breadcrumb-item active">Famille</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
  
    <h1 class="text-center mt-3 mb-2">Liste des Familles</h1>
    <a class="float-right btn btn-success mb-2" href="{{ path('familly_new') }}"><i class="fas fa-plus"></i> Ajouter une Famille</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de  Famille</th>
                <th class="text-center">Date Création</th>
                <th>Adresse</th>
                <th class="text-center">Téléphone</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for familly in famillies %}
            <tr>
                <td>{{ familly.id }}</td>
                <td>{{ familly.nom }}</td>
                <td class="text-center">{{ familly.setAt ? familly.setAt|date('Y-m-d') : '' }}</td>
                <td>{{ familly.adresse|slice(0,50) }}</td>
                <td>{{ familly.phone }}</td>
                <td>
                    <a class="text-primary btn" href="{{ path('familly_show', {'id': familly.id}) }}"><i class="fas fa-eye"></i></a>
                    <a class="text-success btn"  href="{{ path('familly_edit', {'id': familly.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    </div>
    
{% endblock %}
