{% extends 'admin/base.html.twig' %}

{% block title %}Familly index{% endblock %}

{% block body %}
 
   <div class="content-header">
  
    <h1 class="text-center mt-3 mb-2">Familly index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>SetAt</th>
                <th>Adresse</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for familly in famillies %}
            <tr>
                <td>{{ familly.id }}</td>
                <td>{{ familly.nom }}</td>
                <td>{{ familly.setAt ? familly.setAt|date('Y-m-d') : '' }}</td>
                <td>{{ familly.adresse }}</td>
                <td>{{ familly.phone }}</td>
                <td>
                    <a href="{{ path('familly_show', {'id': familly.id}) }}">show</a>
                    <a href="{{ path('familly_edit', {'id': familly.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('familly_new') }}">Create new</a>
    </div>
    </div>
{% endblock %}
