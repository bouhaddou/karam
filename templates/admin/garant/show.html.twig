{% extends 'admin/base.html.twig' %}

{% block title %}Garants{% endblock %}

{% block body %}
 <div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Gestion Famille</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item "><a href="{{ path('admin_dashboard') }}">Table de bord</a></li>
              <li class="breadcrumb-item" ><a href="{{ path('familly_index') }}">Garants</a></li>
              <li class="breadcrumb-item active">Information du Garant</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    <div class="container">
    <h1 class="text-center mt-3 mb-3">Information du Garant</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ garant.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ garant.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ garant.lastName }}</td>
            </tr>
            <tr>
                <th>Paye</th>
                <td>{{ garant.paye }}</td>
            </tr>
            <tr>
                <th>SetAt</th>
                <td>{{ garant.setAt ? garant.setAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ garant.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ garant.phone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ garant.adresse }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-success" href="{{ path('garant_edit', {'id': garant.id}) }}"><i class="fas fa-edit "></i> Modifier</a><br>
    <a class="btn btn-primary mt-3" href="{{ path('garant_index') }}"><i class="fas fa-undo"></i> Retour</a>
    {{ include('admin/garant/_delete_form.html.twig') }}
    </div></div>
{% endblock %}
