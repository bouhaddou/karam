{% extends 'admin/base.html.twig' %}

{% block title %}Projets{% endblock %}

{% block body %}
 
   <div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Gestion des Projets</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item "><a href="{{ path('admin_dashboard') }}">Table de bord</a></li>
              <li class="breadcrumb-item active">Projets</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    <h1 class="text-center mt-3 mb-2">Liste des Projets</h1>
    <a class="float-right btn btn-success mb-2" href="{{ path('projets_new') }}"><i class="fas fa-plus"></i> Ajouter un Projet</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Image</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Etat</th>
                <th>SetAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td>{{ projet.id }}</td>
                <td>{{ projet.titre }}</td>
                <td>
                    <img style="max-height: 50px;border-radius: 50%;" src=" {{ asset('/admin/upload/projets/' ~  projet.image) }}" /></td>
                </td>
                <td>{{ projet.description|slice(0,50)|raw }}.....</td>
                <td>{{ projet.prix }}</td>
                <td>{{ projet.etat }}</td>
                <td>{{ projet.setAt ? projet.setAt|date('d-m-Y') : '' }}</td>
                <td>
                    <a class="text-primary btn" href="{{ path('projets_show', {'id': projet.id}) }}"><i class="fas fa-eye"></i></a>
                    <a class="text-success btn"  href="{{ path('projets_edit', {'id': projet.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   </div>
{% endblock %}
