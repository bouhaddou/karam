{% extends 'admin/base.html.twig' %}

{% block title %}Orphelins{% endblock %}

{% block body %}
 <div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Gestion des Orphelins</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item "><a href="{{ path('admin_dashboard') }}">Table de bord</a></li>
              <li class="breadcrumb-item" ><a href="{{ path('orphelin_index') }}">Orphelin</a></li>
              <li class="breadcrumb-item active">Informations d'orphelin</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    <div class="container">
    <h1 class="text-center mt-3 mb-3">Informations d'orphelin</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ orphelin.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ orphelin.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ orphelin.lastName }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ orphelin.image }}</td>
            </tr>
            <tr>
                <th>SetAt</th>
                <td>{{ orphelin.setAt ? orphelin.setAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ orphelin.adresse }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ orphelin.genre }}</td>
            </tr>
        </tbody>
    </table>

        <a class="btn btn-success" href="{{ path('orphelin_edit', {'id': orphelin.id}) }}"><i class="fas fa-edit "></i> Modifier</a><br>
    <a class="btn btn-primary mt-3" href="{{ path('orphelin_index') }}"><i class="fas fa-undo"></i> Retour</a>
    {{ include('admin/orphelin/_delete_form.html.twig') }}
 </div>
</div>
{% endblock %}
